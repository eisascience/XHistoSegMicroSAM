# Halo API Configuration
HALO_API_ENDPOINT=https://your-halo-instance.com/graphql
HALO_API_TOKEN=your_api_token_here

# Halo Link Integration Configuration
HALOLINK_BASE_URL=https://halolink.example.com
HALOLINK_GRAPHQL_URL=https://halolink.example.com/api/graphql
HALOLINK_GRAPHQL_PATH=/api/graphql
HALOLINK_CLIENT_ID=your_client_id
HALOLINK_CLIENT_SECRET=your_client_secret
HALOLINK_SCOPE=read write

# Local Mode (set to true to use without Halo connection)
LOCAL_MODE=true

# MicroSAM Configuration
MICROSAM_MODEL_TYPE=vit_b_histopathology
MICROSAM_CACHEDIR=

# Tiling Settings
ENABLE_TILING=true
TILE_SHAPE=1024,1024
HALO_SIZE=256,256

# Embeddings Cache
ENABLE_EMBEDDINGS_CACHE=false
EMBEDDINGS_CACHE_DIR=./cache/embeddings

# Application Settings
MAX_IMAGE_SIZE_MB=500
TEMP_DIR=./temp
LOG_LEVEL=INFO

# Image Processing Settings
DEFAULT_TARGET_SIZE=1024
JPEG_QUALITY=95

# GeoJSON Settings
MIN_POLYGON_AREA=100
SIMPLIFY_TOLERANCE=1.0
